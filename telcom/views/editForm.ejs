<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Form</title>
    <link rel="stylesheet" href="editForm.css"/>
</head>
<body>
    <form action="/edit/<%= user._id %>" method="post" class="edit-form">
        <div class="form-section">
            <label for="companyName">Channel Name:</label>
            <input type="text" name="companyName" value="<%= user.companyName %>" required>
            <label for="comission">Comission:</label>
            <input type="text" name="comission" value="<%= user.comission %>" required>
            <label for="orderTypeSelect">Order Type:</label>
            <input type="text" name="orderTypeSelect" value="<%=user.orderTypeSelect %>">
            <label for="orderNo">Order No</label>
            <input type="text" name="orderNo" value="<%=user.orderNo%>">
        </div>
        <div class="form-section">
            <label for="name">Edit Name:</label>
            <input type="text" name="name" value="<%=user.name %>">
            <label for="address">Edit Address:</label>
            <input type="text" name="address" value="<%=user.address%>">
            <label for="email">Edit Email:</label>
            <input type="email" name="email" value="<%=user.email %>" readonly>
        </div>

        <div class="form-section">
            <label for="birthDate">Edit Date of Birth:</label>
            <input type="date" name="birthDate" value="<%=user.birthDate %>">
            <label for="choseId">Chose Id:</label>
            <input type="text" name="choseId" value="<%=user.choseId%>">
            <label for="LicenseNumber">License Number:</label>
            <input type="text" name="LicenseNumber" value="<%=user.licenseNumber%>">
        </div>

        <div class="form-section">
            <label for="expiryDate">Expiry Date:</label>
            <input type="date" name="expiryDate" value="<%=user.expiryDate%>">
            <label for="portingNumber">Porting Number:</label>
            <input type="text" name="portingNumber" value="<%=user.portingNumber%>">
            <label for="ProviderName">Provider Name:</label>
            <input type="text" name="ProviderName" value="<%=user.ProviderName%>">
        </div>

        <div class="form-section">
            <label for="AccountNumber">Account Number:</label>
            <input type="text" name="AccountNumber" value="<%=user.AccountNumber%>">
            <label for="portPhoneNumber">Port Phone Number:</label>
            <input type="tel" name="portPhoneNumber" value="<%=user.portPhoneNumber%>">
            <label for="mainNumber">Main Number:</label>
            <input type="tel" name="mainNumber" value="<%=user.mainNumber %>">
        </div>

        <div class="form-section">
            <label for="mainCell">Main Cell:</label>
            <input type="tel" name="mainCell" value="<%=user.mainCell%>">
            <label for="selectedPackage">Selected Package:</label>
            <input type="text" name="selectedPackage" value="<%= user.line %> + <%= user.speed %> + <%= user.TvPackageinfo %>">
            <label for="preferedinstallationdate">Preferred Installation Date:</label>
            <input type="datetime-local" name="preferedinstallationdate" value="<%= user.preferedinstallationdate%>">
        </div>

        <div class="form-section">
            <label for="noteOrder">Note Order:</label>
            <input type="text" name="noteOrder" value="<%=user.noteOrder%>">
        </div>
        <button>submit</button>
<!-- Add this container div for the popup -->
<div class="popup" id="popupForm">
    <form action="/edit/<%= user._id %>" method="post" class="edit-form">
        <!-- Rest of the form remains unchanged -->
    </form>
</div>
    </form>
    <script></script>
</body>
</html>
